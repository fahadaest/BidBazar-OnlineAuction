<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/indexstyle.css">
    <link rel="stylesheet" href="slick/slick.css">
    <link rel="stylesheet" href="slick/slick-theme.css">
    <link rel="stylesheet" href="/css/banner.css">

    <!-- site favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">

    <!-- ====== All css file ========= -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css//icofont.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="/assets/css/swiper-bundle.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">

    <!-- External owl carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
        integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
        integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Upload Product</title>
</head>


<body>
    <%- include('includes/navbar') %>


        <!-- Create product -->
        <section class="create-nft-section padding-bottom padding-top">
            <div class="container">
                <div class="section-wrapper">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- create item -->
                            <div class="create-nft py-5 px-4">
                                <form class="create-nft-form" action="/api/createProduct" method="POST"
                                    enctype="multipart/form-data">
                                    <!-- upload field -->
                                    <div class="upload-item mb-30">
                                        <p>Upload upto 6 images</p>
                                        <div class="custom-upload">
                                            <div class="file-btn"><i class="icofont-upload-alt"></i> Upload a file</div>
                                            <input type="file" multiple name="image" />
                                        </div>
                                    </div>
                                    <!-- item name input -->
                                    <div class="form-floating item-name-field mb-3">
                                        <input type="text" class="form-control" name="title" id="itemNameInput"
                                            placeholder="Item Name">
                                        <label for="itemNameInput">Title</label>
                                    </div>
                                    <!-- item-description -->
                                    <div class="form-floating item-desc-field mb-30">
                                        <textarea class="form-control" placeholder="Item Description" name="description"
                                            id="itemDesc"></textarea>
                                        <label for="itemDesc">Item
                                            Description</label>
                                    </div>
                                    <!-- item-category -->
                                    <div class="item-category-field mb-30">
                                        <select id="categorySelect" name="category" class="form-select">
                                            <option>Select Category......</option>
                                            <option value="Vehicle">Vehicle</option>
                                            <option value="Property">Property</option>
                                            <option value="Furniture">Furniture</option>
                                            <option value="Antique">Antique</option>
                                            <option value="Electronics">Electronics</option>
                                            <option value="Fashion">Fashion</option>
                                            <option value="Collections">Collections</option>
                                            <option value="More">More</option>
                                        </select>
                                    </div>
                                

                                    <div class="mb-3">
                                        <label for="datetimeInput" class="form-label">Starting Date and Time</label>
                                        <input type="datetime-local" name="start_time" class="form-control"
                                            id="startDatetimeInput">
                                    </div>

                                    <div class="mb-3">
                                        <label for="datetimeInput" class="form-label">Ending Date and Time</label>
                                        <input type="datetime-local" name="end_time" class="form-control"
                                            id="endDatetimeInput">
                                    </div>

                                    <!-- Alert container -->
                                    <div id="alertContainer"></div>


                                    <div class="item-price-field mb-5">
                                        <div class="row g-3 justify-content-center">
                                            <div class="col-md-6 col-lg-4">
                                                <div class="form-floating">
                                                    <input type="text" name="store_id" value="<%=store_id%>"
                                                        class="form-control" id="sizeInput" placeholder="Size">
                                                    <label for="sizeInput">Store Id
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-4">
                                                <div class="form-floating">
                                                    <input type="text" name="bid_price" class="form-control"
                                                        id="priceInput" placeholder="Size">
                                                    <label for="priceInput">Price</label>
                                                </div>
                                                <!-- Alert container -->
                                                <div id="alertContainer"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- submit button -->
                                    <div class="submit-btn-field text-center">
                                        <button type="button" onclick="checkDates()">Upload Product</button>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        <!-- scrollToTop start here -->
        <a href="#" class="scrollToTop"><i class="icofont-swoosh-up"></i></a>
        <!-- scrollToTop ending here -->

        <script>
            function checkDates() {
                const startDatetimeInput = document.getElementById("startDatetimeInput");
                const endDatetimeInput = document.getElementById("endDatetimeInput");
                const alertContainer = document.getElementById("alertContainer");
        
                const startDateValue = new Date(startDatetimeInput.value);
                const endDateValue = new Date(endDatetimeInput.value);
        
                if (endDateValue < startDateValue) {
                    alertContainer.innerHTML = '<div class="alert alert-danger" role="alert">Ending date should not be before the starting date.</div>';
                } else {
                    alertContainer.innerHTML = '';
                    document.querySelector(".create-nft-form").submit();
                }
            }
        </script>
        



        <!-- All Scripts -->
        <script src="/assets/js/jquery-3.6.0.min.js"></script>
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/waypoints.min.js"></script>
        <script src="/assets/js/swiper-bundle.min.js"></script>
        <script src="/assets/js/countdown.min.js"></script>
        <script src="/assets/js/jquery.counterup.min.js"></script>
        <script src="/assets/js/wow.min.js"></script>
        <script src="/assets/js/jquery.simpleLoadMore.min.js"></script>
        <script src="/assets/js/isotope.pkgd.min.js"></script>
        <script src="/assets/js/functions.js"></script>
</body>

</html>