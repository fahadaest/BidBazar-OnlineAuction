        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Create Store</title>
</head>


<body>
    <%- include('includes/navbar') %>


    <header class="bg-warning text-white text-center py-5">
        <h1>Register Your Store</h1>
    </header>

        <!-- Create product -->
        <section class="create-nft-section padding-bottom padding-top">
            <div class="container">
                <div class="section-wrapper">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- create item -->
                            <div class="create-nft py-5 px-4">
                                <form class="create-nft-form" action="/api/createStore" method="POST" enctype="multipart/form-data">
                                    <!-- upload field -->
                                    <div class="upload-item mb-30">
                                        <p>PNG,JPG,JPEG,SVG,WEBP,Mp3 & Mp4(Max-150mb)</p>
                                        <div class="custom-upload">
                                            <div class="file-btn"><i class="icofont-upload-alt"></i>
                                                Upload a file</div>
                                            <input type="file" name="image">
                                        </div>
                                    </div>
                                    <!-- item name input -->
                                    <div class="form-floating item-name-field mb-3">
                                        <input type="text" class="form-control" name="fullname" id="itemNameInput"
                                            placeholder="Store Name">
                                        <label for="itemNameInput">Store Name</label>
                                    </div>
                                    <!-- Store Username -->
                                    <div class="form-floating item-name-field mb-3">
                                        <input type="text" class="form-control" name="name" id="itemNameInput"
                                            placeholder="Enter your unique store name">
                                        <label for="itemNameInput">Store Username</label>
                                    </div>
                                    <!-- item-description -->
                                    <div class="form-floating item-desc-field mb-30">
                                        <textarea class="form-control" placeholder="Store Description" name="description"
                                            id="itemDesc"></textarea>
                                        <label for="itemDesc">Store Details</label>
                                    </div>
                                    <!-- submit button -->
                                    <div class="submit-btn-field text-center">
                                        <button type="submit">Create Store</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>





        <!-- scrollToTop start here -->
        <a href="#" class="scrollToTop"><i class="icofont-swoosh-up"></i></a>
        <!-- scrollToTop ending here -->




        <!-- All Scripts -->
        <script src="/assets/js/jquery-3.6.0.min.js"></script>
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/waypoints.min.js"></script>
        <script src="/assets/js/swiper-bundle.min.js"></script>
        <script src="/assets/js/countdown.min.js"></script>
        <script src="/assets/js/jquery.counterup.min.js"></script>
        <script src="/assets/js/wow.min.js"></script>
        <script src="/assets/js/jquery.simpleLoadMore.min.js"></script>
        <script src="/assets/js/isotope.pkgd.min.js"></script>
        <script src="/assets/js/functions.js"></script>
</body>

</html>